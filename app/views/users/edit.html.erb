<h2>Edit Profile Page</h2>

<%= form_for :user, url: update_profile_user_path, :method => :put do |f| %>

  <%= field_set_tag do %>
    <%= f.label :first_name %> 
    <%= f.text_field :first_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :last_name %> 
    <%= f.text_field :last_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :username %> 
    <%= f.text_field :username %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :age %> 
    <%= f.text_field :age %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :image_url %> 
    <%= f.text_field :image_url %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :type, text = "Gender" %> 
    <%= f.text_field :type %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :preference %> 
    <%= f.text_field :preference %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :about %> 
    <%= f.text_field :about %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :height %> 
    <%= f.text_field :height %> cm
  <% end %>

  <%= field_set_tag do %>
  <%= f.label :imperial_height %> 
  <% height_options = [] %>  
  <% (4...8).each do |ft| %>
    <% (1...13).each do |inch|%> 
      <% height_options.push("#{ft}' #{inch}") %>
    <% end %>
  <% end %>
    <%= f.select :imperial_height, height_options, include_blank: true %> ft
  <% end %>

  <div id ="ethnicities">
    <h4>Ethnicities</h4>
    <%= f.collection_check_boxes :ethnicity_ids, 
    @ethnicities, :id, :name %>
  </div>
  
  <div id ="languages">
    <h4>Languages</h4>
    <%= f.collection_check_boxes :language_ids, 
    @languages, :id, :name %>
  </div>

  <%= submit_tag "Update" %> 
  
<% end %>
  
