<h2>Edit Profile Page</h2>

<%= image_tag(@user.avatar.url , class: "avatar") if @user.avatar? %>

<%= form_for @user, as: :user, url: {action: "update"} do |f| %>

  <%= field_set_tag do %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :username %>
    <%= f.text_field :username %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :age %>
    <%= f.text_field :age %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :occupation %> 
    <%= f.text_field :occupation %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :preference %>
    <%= f.text_field :preference %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :about %>
    <%= f.text_field :about %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :height %>
    <%= f.text_field :height %> cm
  <% end %>

  <div id = "smoking" class="form-section">
    <%= field_set_tag do %>
      <h4>Smoking?</h4>
      <%= f.label :smoking,"Yes" %>
      <%= f.radio_button :smoking, 'true' %>

      <%= f.label :smoking, "No" %>
      <%= f.radio_button :smoking, 'false' %>
    <% end %>
  </div>

  <div id ="ethnicities" class="form-section">
    <h4>Ethnicities</h4>
    <%= f.collection_check_boxes :ethnicity_ids,
    @ethnicities, :id, :name %>
  </div>

  <div id ="languages" class="form-section">
    <h4>Languages</h4>
    <%= collection_select(:user, :language_ids, @languages, :id, :name,{},{multiple:true}) %>
  </div>

  <div id ="horoscopes" class="form-section">
    <%= f.label :horoscope_id %>
    <%= f.select(:horoscope_id, Horoscope.all.collect { |h| [h.name, h.id] })  %>
  </div>

  <%= field_set_tag do %>
    <%= f.label :avatar %>
    <%= f.file_field(:avatar, accept: 'image/png,image/gif.image/jpeg') %>
  <% end %>


  <%= submit_tag "Update" %>

<% end %>
